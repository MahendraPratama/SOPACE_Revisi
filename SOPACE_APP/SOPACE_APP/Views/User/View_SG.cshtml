<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h2>Request Slip Gaji NIP: @Session["user_nip"].ToString()</h2>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#mymodal">Add Request</a>
                </div>
            </div>
            <div class="panel panel-primary">
                <div class="panel-body">
                    <table id="dataTables-example" class="table table-striped table-bordered table-sm">
                        <thead>
                            <tr>
                                <th scope="col" width="200px" height=25px>ID Request</th>
                                <th scope="col" width="150px" height=25px>Tanggal Request</th>
                                <th scope="col" width="150px" height=25px>Durasi</th>
                                <th scope="col" width="150px" height=25px>Status</th>
                                <th scope="col" width="200px" height=25px>Action</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal" tabindex="-1" role="dialog" id="mymodal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Request Slip Gaji</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formSG">
                    <div class="form-group">
                        <span>Tanggal Request</span>
                        <input type="date" name="txtTgl" id="txtTgl" placeholder="ID" class="form-control" style="width:500px" required/>
                    </div>

                    <div class="form-inline">
                        <div><span>Durasi Slip Gaji</span></div>
                        @Html.DropDownList("Durasi1", new SelectList(listItems, "Value", "Text"), "Select Bulan", new { @class = "form-control", id = "Durasi1", style = "width:150px", required= "required" })
                        <span>s/d</span>
                        @Html.DropDownList("Durasi2", new SelectList(listItems, "Value", "Text"), "Select Bulan", new { @class = "form-control", id = "Durasi2", style = "width:150px", required= "required" })
                        @*<input type="text" name="txtnamabank" id="txtnamabank" placeholder="nama bank" class="form-control" />*@
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <input type="submit" id="btnSubmit" class="btn btn-primary" data-dismiss="modal" value="Submit" />
            </div>
        </div>
    </div>
</div>
@section script{
    <script type="text/javascript">

        $("#btnSubmit").on("click", function (e) {
            var check = confirm('Are you sure to input data?');
                e.preventDefault();
            let formdata = $("#formSG").serialize();
            if (check == true) {
                $.ajax({
                    url: '@Url.Action("AddSG","User")',
                    type: 'POST',
                    data: formdata,
                    success: function (data) {
                        alert(data);
                        refresh();
                    },
                    error: function () {
                        alert("Insert Request Failed");
                        refresh();
                    }
                });
            } else {
                return false;
            }
                
        });

         $.get(
        '@Url.Action("ViewRequestSG")',
                 function (data) {
                     $( "#dataTables-example tbody").empty();
                     $.each(data, function (i, model) {
                         console.log(model.status);
                         var date = `${model.value}`
                         var button = `<button id="${model.id_req}" class='btn btn-danger'>Delete</button>`
                         var a = `<a href="FormEditSG/${model.id_req}" class='btn btn-primary'>Edit</a>`
                         var rows = `<tr>
                                        <td height=50px>${model.id_req}</td>
                                        <td height=50px > ${date}</td >
                                        <td height=50px > ${model.durasi_awal} - ${model.durasi_akhir}</td >
                                        <td height=50px > ${model.status}</td >
                                        <td height=50px >  ${a} ${button} </td >
                                    </tr >`;

                         $("#dataTables-example tbody").append(rows);
                 });
            });

        function refresh() {
            location.reload();
            $("#txtTgl").val("");
            $("#Durasi1").val("");
            $("#Durasi2").val("");

        }

        $("#dataTables-example").on("click", "button", function (e) {
            var checkstr = confirm(`are you sure you want to delete Request ${e.target.id}?`);
            if (checkstr == true) {
                $.get(`DeleteSG/${e.target.id}`, function (data) {
                    alert(data);
                    refresh();
                });
            } else {
                return false;
            }
        });
    </script>


}

