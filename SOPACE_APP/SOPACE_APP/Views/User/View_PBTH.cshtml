@{
    ViewBag.Title = "Request Surat Pemberitahuan";
    Layout = "~/Views/MasterLayout/MasterUser.cshtml";
}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h2>Request Surat Pemberitahuan NIP: @Session["user_nip"].ToString()</h2>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="panel panel-info">
            <div class="panel-heading">
                <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#mymodal">Add Request</a>
            </div>
        </div>
        <div class="panel panel-primary" >
            <div class="panel-body">
                <table id="dataTables-example" class="table table-striped table-bordered table-sm">
                    <thead>
                        <tr>
                            <th scope="col" width="230px" height=25px>ID Request</th>
                            <th scope="col" width="200px" height=25px>Tanggal Request</th>
                            <th scope="col" width="200px" height=25px>Yang dituju</th>
                            <th scope="col" width="350px" height=25px>Deskripsi Pemberitahuan</th>
                            <th scope="col" width="150px" height=25px>Status</th>
                            <th scope="col" width="300px" height=25px>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
        
    </div>
</div>
<div class="modal" tabindex="-1" role="dialog" id="mymodal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Request Surat Pemberitahuan</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formPBTH" name="formPBTH">
                    <div class="form-group">
                        <span>Tanggal Request</span>
                        <input type="date" name="txtTgl" id="txtTgl" placeholder="ID" class="form-control" style="width:500px" required />
                    </div>

                    <div class="form-group">
                        <span>Yang dituju</span>
                        <input type="text" name="txtTujuan" id="txtTujuan" placeholder="Tujuan" class="form-control" style="width:500px" required />
                    </div>

                    <div class="form-group">
                        <span>Deskripsi Pemberitahuan</span>
                        <textarea name="txtDesc" id="txtDesc" maxlength="150" class="form-control" onkeyup="hitungtext()" style="width:500px" required></textarea>
                        <span id="hasil">0</span>/150 Karakter
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <input type="submit" id="btnSubmit" class="btn btn-primary" data-dismiss="modal" value="Submit" />
            </div>
        </div>
    </div>
</div>
@section script{
    <script type="text/javascript">
        $("#btnSubmit").on("click", function (e) {
             var check = confirm('Are you sure to input data?')
                e.preventDefault();
            let formdata = $("#formPBTH").serialize();
            if (check == true) {
                $.ajax({
                    url: '@Url.Action("AddPBTH", "User")',
                    type: 'POST',
                    data: formdata,
                    success: function (data) {
                        alert(data);
                        refresh();
                    },
                    error: function () {
                        alert("Insert Data Failed");
                        refresh();
                    }
                });
            } else {
                return false;
            }

        });
        function hitungtext() {
            var teks = document.formPBTH.txtDesc.value.length;
            var total = document.getElementById('hasil');
            total.innerHTML = teks;
        }

         $.get(
        '@Url.Action("GetPBTH")',
                 function (data) {
                     $( "#dataTables-example tbody").empty();
                     $.each(data, function (i, model) {

                         var date = `${model.value}`
                         var button = `<button id="${model.id_req}" class='btn btn-danger'>Delete</button>`
                         var a = `<a href="FormEditPBTH/${model.id_req}" class='btn btn-primary'>Edit</a>`
                         var rows = `<tr>
                                        <td height=50px>${model.id_req}</td>
                                        <td height=50px >${date}</td >
                                        <td height=50px >${model.tujuan}</td >
                                        <td height=50px >${model.deskripsi}</td >
                                        <td height=50px >${model.status}</td >
                                        <td height=50px >${a} ${button} </td >
                                    </tr >`;
                         $("#dataTables-example tbody").append(rows);

                      });
                 });
        function refresh() {
            location.reload();
            $("#txtTgl").val("");
            $("#txtTujuan").val("");
            $("#txtDesc").val("");
            var total = document.getElementById('hasil');
            total.innerHTML = 0;
        }

        $("#dataTables-example").on("click", "button", function (e) {
            var checkstr = confirm(`are you sure you want to delete Request ${e.target.id}?`);
            if (checkstr == true) {

                $.get(`DeletePBTH/${e.target.id}`, function (data) {
                    alert(data);
                    refresh();
                });
            } else {
                return false;
            }
        });
    </script>


}
