@{
    ViewBag.Title = "Request Surat Pembuatan Visa";
    Layout = "~/Views/MasterLayout/MasterUser.cshtml";
}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h2>Request Surat Pembuatan Visa NIP: @Session["user_nip"].ToString()</h2>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="panel panel-info">
            <div class="panel-heading">
                <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#mymodal">Add Request</a>
            </div>
        </div>
        <div class="panel panel-primary">
            <div class="panel-body">
                <table id="dataTables-example" class="table table-striped table-bordered table-sm">
                    <thead>
                        <tr>
                            <th scope="col" width="230px" height=25px>ID Request</th>
                            <th scope="col" width="200px" height=25px>Tanggal Request</th>
                            <th scope="col" width="200px" height=25px>No Passport</th>
                            <th scope="col" width="350px" height=25px>Keperluan</th>
                            <th scope="col" width="200px" height=25px>Status</th>
                            <th scope="col" width="250px" height=25px>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>       
        
    </div>
</div>
<div class="modal" tabindex="-1" role="dialog" id="mymodal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Request Surat Pembuatan Visa</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formVisa" name="formVisa">
                    <div class="form-group">
                        <span>Tanggal Request</span>
                        <input type="date" name="txtTgl" id="txtTgl" placeholder="ID" class="form-control" style="width:500px" required />
                    </div>

                    <div class="form-group">
                        <span>Nomor Passport</span>
                        <input type="text" name="txtnopass" id="txtnopass" placeholder="No Passport" class="form-control" style="width:500px" required/>
                    </div>

                    <div class="form-group">
                        <span>Keperluan</span>
                        <textarea name="txtKeperluan" id="txtKeperluan" maxlength="50" class="form-control" onkeyup="hitungtext()" style="width:500px" required></textarea>
                        <span id="hasil">0</span>/50 Karakter
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <input type="submit" id="btnSubmit" class="btn btn-primary" data-dismiss="modal" value="Submit" />
            </div>
        </div>
    </div>
</div>
@section script{
    <script type="text/javascript">
        $("#btnSubmit").on("click", function (e) {
            var check = confirm('Are you sure to input?');
                e.preventDefault();
            let formdata = $("#formVisa").serialize();
            if (check == true) {
                $.ajax({
                    url: '@Url.Action("AddVisa", "User")',
                    type: 'POST',
                    data: formdata,
                    success: function (data) {
                        alert(data);
                        refresh();
                    },
                    error: function () {
                        alert("Insert Data Failed");
                        refresh();
                    }
                });
            } else {
                return false;
            }
            
        });
        function hitungtext() {
            var teks = document.formVisa.txtKeperluan.value.length;
            var total = document.getElementById('hasil');
            total.innerHTML = teks;
        }

         $.get(
        '@Url.Action("GetVisa")',
                 function (data) {
                     $( "#dataTables-example tbody").empty();
                     $.each(data, function (i, model) {
                         var date = `${model.value}`
                         var button = `<button id="${model.id_req}" class='btn btn-danger'>Delete</button>`
                         var a = `<a href="FormEditVisa/${model.id_req}" class='btn btn-primary'>Edit</a>`
                         var rows = `<tr>
                                        <td height=50px>${model.id_req}</td>
                                        <td height=50px > ${date}</td >
                                        <td height=50px > ${model.no_passport}</td >
                                        <td height=50px > ${model.keperluan}</td >
                                        <td height=50px > ${model.status}</td >
                                        <td height=50px >  ${a} ${button} </td >
                                    </tr >`;
                         $("#dataTables-example tbody").append(rows);

                      });
                 });

        function refresh() {
            location.reload();
            $("#txtTgl").val("");
            $("#txtnopass").val("");
            $("#txtKeperluan").val("");

            var total = document.getElementById('hasil');
            total.innerHTML = 0;
        }

        $("#dataTables-example").on("click", "button", function (e) {
            var checkstr = confirm(`are you sure you want to delete Request ${e.target.id}?`);
            if (checkstr == true) {

                $.get(`DeleteVisa/${e.target.id}`, function (data) {
                    alert(data);
                    refresh();
                });
            } else {
                return false;
            }
        });
    </script>


}
