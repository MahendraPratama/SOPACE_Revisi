@model IEnumerable<SOPACE_MVC.Models.lembur>

@{
    ViewBag.Title = "ShowLembur";
    Layout = "~/Views/MasterLayout/MasterAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12"style="margin-top:30px">
            <h1 class="page-header">Daftar Lembur Karyawan</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th style="text-align:center">
                                    ID Lembur
                                </th>
                                <th style="text-align:center">
                                    NIP
                                </th>
                                <th style="text-align:center">
                                    Tanggal Lembur
                                </th>
                                <th style="text-align:center">
                                    Jam Mulai
                                </th>
                                <th style="text-align:center">
                                    Jam Selesai
                                </th>
                                <th style="text-align:center">
                                    Jumlah Jam
                                </th>
                                <th style="text-align:center">
                                    Status Lembur
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var lembur in Model)
                            {
                            <tr>
                                <td style="text-align:center">
                                    @Html.DisplayFor(modelLembur => lembur.id_lembur)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(modelLembur => lembur.NIP)
                                </td>
                                <td style="text-align:center">
                                    @String.Format("{0:dd MMMM yyyy}", lembur.tanggal)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(modelLembur => lembur.jam_mulai)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(modelLembur => lembur.jam_selesai)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(modelTotal => lembur.total_jam)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(modelStats => lembur.stats)
                                </td>
                                <td>
                                    <a class="glyphicon glyphicon-pencil" href="Edit/@lembur.id_lembur" />&nbsp;|&nbsp;
                                    <a class="glyphicon glyphicon-trash" href="DeleteLembur/@lembur.id_lembur" onclick="return confirm(`Are you sure to Delete?`)" />
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section script{
    <script>
        $().ready(function () {
            
        });

    </script>
    }
