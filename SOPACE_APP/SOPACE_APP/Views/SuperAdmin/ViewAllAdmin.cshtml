@model IEnumerable<SOPACE_MVC.Models.user>

@{
    ViewBag.Title = "ViewAllAdmin";
    Layout = "~/Views/MasterLayout/MasterAdmin.cshtml";
}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12" style="margin-top:20px">
            <h1 class="page-header">Daftar Admin</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Tabel Daftar Admin
                </div>
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th style="text-align:center">
                                    NIP
                                </th>
                                <th style="text-align:center">
                                    Username
                                </th>
                                <th style="text-align:center">
                                    Role
                                </th>
                                <th style="text-align:center">
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="text-align:center">
                                        @Html.DisplayFor(modelItem => item.NIP)
                                    </td>
                                    <td style="text-align:center">
                                        @Html.DisplayFor(modelItem => item.username)
                                    </td>
                                    <td style="text-align:center">
                                        @Html.DisplayFor(modelItem => item.role)
                                    </td>
                                    <td style="text-align:center">
                                        @Html.ActionLink(" ","Edit_Admin", new { id = item.username }, 
                                            new { @class = "btn btn-primary glyphicon glyphicon-edit" }) 
                                        @Html.ActionLink(" ", "Delete_Admin", new { id_user = item.username },
                                             new { @class = "btn btn-danger glyphicon glyphicon-trash" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
@section Script{
    <script>
        


    </script>
}
