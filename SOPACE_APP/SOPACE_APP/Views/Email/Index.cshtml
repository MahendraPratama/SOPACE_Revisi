
@model SOPACE_MVC.Models.EmailModel
@{
                /**/

                ViewBag.Title = "Index";
                Layout = "~/Views/MasterLayout/MasterAdmin.cshtml";
}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h2>Send Email</h2>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div>
            @using (Html.BeginForm("SendEmail", "Email", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-inline">
                    <span>To</span>
                    <span style="margin-left:33px">:</span>
                    @Html.TextBoxFor(Model => Model.To, new { @class = "form-control", style = "width:500px", id = "txtTo" })
                </div>
                <div class="form-inline" style="margin-top:10px">
                    <span>Subject</span>
                    <span>:</span>
                    @Html.TextBoxFor(Model => Model.Subject, new { @class = "form-control", style = "width:500px", id = "txtSubject" })
                </div>
                <div class="form-inline" style="margin-top:10px">
                    <span style="vertical-align:top">Body</span>
                    <span style="vertical-align:top;margin-left:15px">:</span>
                    @Html.TextAreaFor(Model => Model.Message, new { @class = "form-control", rows = "15", cols = "25", style = "width:500px", id = "txtBody" })
                </div>
                <div class="form-inline" style="margin-top:10px">
                    <span>File</span>
                    <span style="margin-left:25px">:</span>
                    @Html.TextBoxFor(Model => Model.Attachment, new { @class = "form-control", type = "file", id = "txtFile" })
                </div>
                <div class="form-inline">
                    <input type="submit" value="Send" class="btn btn-success" />
                </div>
                <span style="color:green">@ViewBag.Message</span>
            }
        </div>
    </div>
</div>
@section script{
    <script type="text/javascript">
        refresh();
        function refresh() {
            $("#txtTo").val("");
            $("#txtSubject").val("");
            $("#txtBody").val("");
            $("#txtFile").val("");
        }

    </script>
}

